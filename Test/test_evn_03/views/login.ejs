<%-include ("base") %>
<main>
    <h1>ログイン</h1>
    <form action="/Login" method="post">
        <div class="login_block">
            <p>ユーザ名もしくはメールアドレス</p>
            <input type="text" name="user_input">
            <p>パスワード</p>
            <input type="password" name="password">
            <p>状態：<%- session.login ? "ログイン済み" : "未ログイン" %></p>
        </div>
        <input type="submit" value="ログイン">
    </form>
    <a href="/">TOPページ</a>
</main>
<%-include ("footer") %>